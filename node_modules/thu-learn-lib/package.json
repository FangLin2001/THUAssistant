{
  "name": "thu-learn-lib",
  "version": "3.0.1",
  "description": "a JavaScript library to provide a program-friendly interface to Web Learning (2018) of Tsinghua University",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "type": "module",
  "files": [
    "lib/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc && sed -i -E \"s/from '(\\.\\/.*)'/from '\\1.js'/g\" lib/*.js",
    "build-dist": "webpack --config webpack.config.js",
    "watch-dist": "webpack -w --config webpack.config.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"demo/**/*.ts\" \"./*.js\"",
    "lint": "eslint --ext .ts 'src/**'",
    "test": "jest --config jest.config.json"
  },
  "keywords": [
    "tsinghua",
    "learn2018"
  ],
  "author": "Harry Chen <harry-chen@outlook.com> (https://harrychen.xyz)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Harry-Chen/thu-learn-lib.git"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.15",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "node-polyfill-webpack-plugin": "^1.0.2",
    "prettier": "^2.4.1",
    "remove-files-webpack-plugin": "^1.4.5",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webextension-polyfill": "^0.8.0",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "cross-fetch": "^3.0.1",
    "entities": "^2.0.0",
    "es6-denodeify": "^0.1.5",
    "form-data": "^4.0.0",
    "js-base64": "^3.7.2",
    "real-isomorphic-fetch": "^3.0.0"
  }
}
