/* pages/learn/announcement/announcement.wxss */

.van-cell {
  background-color: #F6F7F1 !important;
  border: 1px solid#696969 !important;
  border-radius: 10px !important;
  margin: 2px 5px 2px 5px !important;
  width: auto !important;
  box-shadow: 2px 2px 3px #888888;
}

.van-cell__title {
  /* color: rgb(153,50,204); */
  min-width: 80%;
}

.van-cell__label {
  min-width: 80%;
  color: black;
}

.van-cell__value {
  min-width: 10%;
}

.van-swipe-cell__left,
.van-swipe-cell__right {
  height: inherit;
  display: flex;
  width: 60px;
  text-align: center;
  align-items: center;
  justify-content: center;
  background-color: #f44;
  color: #fff;
}

.title {
  font-size: 16px;
  font-weight: bold;
  color: #9932CC;
}

.list-title {
  /* padding: 10px; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: dimgray;
  font-size: 11px;
}